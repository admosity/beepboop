include ../partials/sidebar.jade

div.dashboard-wrapper
  div.dashboard-header
    h1 new device
  div.dashboard-content
    div.device-form
      div.device-inner
        h1 connect new device
        form(ng-submit="newDevice()")
          input(type="text" placeholder="Device Name" ng-model="device.name")
          textarea(placeholder="Default Template" ng-model="device.template")
          input(type="submit" class="btn btn-purple" value="Connect")
